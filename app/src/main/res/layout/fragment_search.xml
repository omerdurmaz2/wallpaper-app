<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.search.SearchFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
         />

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_style_search_layout"
        android:orientation="horizontal"
        android:paddingStart="22.5dp"
        android:paddingLeft="22.5dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/etSearchImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/transparent"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorBlack" />

        <ImageButton
            android:id="@+id/ibDeleteText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_close_24"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ivSearchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_style_search_button_layout"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search" />


    </LinearLayout>


</RelativeLayout>