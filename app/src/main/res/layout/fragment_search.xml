<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SearchFragment">

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/custom_style_search_layout"
        android:orientation="horizontal"
        android:paddingStart="22.5dp"
        android:paddingLeft="22.5dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/etSearchImage"
            android:layout_width="0dp"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:imeOptions="actionSearch"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ivSearchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_style_search_button_layout"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bottom_navigation_search" />
<!--        <ImageView
            android:id="@+id/ivSearchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_style_search_button_layout"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bottom_navigation_search" />-->

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llSearch"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llSearch" />

</RelativeLayout>